<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/answer_fragment_bg"
    android:orientation="vertical" >

    <!-- TitleBar -->

    <cn.skyduck.custom_control.answer_title.AnswerTitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <!-- 问题标题 -->

        <TextView
            android:id="@+id/question_title_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:singleLine="false"
            android:text="1、恋爱或订婚"
            android:textColor="#ff000000"
            android:textSize="35sp"
            android:textStyle="bold" />

        <!-- 发生时间 -->

        <TextView
            android:id="@+id/prompt_textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="性质(根据自身感受判断)："
            android:textColor="@color/TextPromptInfo"
            android:textSize="28sp"
            android:textStyle="bold" />
        <!-- 发生时间 -->

        <RadioGroup
            android:id="@+id/answer_button_radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            <!-- 好事 -->

            <RadioButton
                android:id="@+id/radioGroup1_radioButton1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:gravity="center"
                android:text="好事"
                android:textSize="38sp" />
            <!-- 坏事 -->

            <RadioButton
                android:id="@+id/radioGroup1_radioButton2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:gravity="center"
                android:text="坏事"
                android:textSize="38sp" />
        </RadioGroup>
        <!-- 影响程度： -->

        <TextView
            android:id="@+id/prompt_textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:text="影响程度："
            android:textColor="@color/TextPromptInfo"
            android:textSize="28sp"
            android:textStyle="bold" />
        <!-- 答案按钮1 -->

        <RadioGroup
            android:id="@+id/answer_button_radioGroup2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 无影响 -->

            <RadioButton
                android:id="@+id/radioGroup2_radioButton1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="无影响"
                android:textSize="38sp" />
            <!-- 轻度 -->

            <RadioButton
                android:id="@+id/radioGroup2_radioButton2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="轻度"
                android:textSize="38sp" />

            <!-- 中等 -->

            <RadioButton
                android:id="@+id/radioGroup2_radioButton3"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="中等"
                android:textSize="38sp" />
            <!-- 很大 -->

            <RadioButton
                android:id="@+id/radioGroup2_radioButton4"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="很大"
                android:textSize="38sp" />
            <!-- 极大 -->

            <RadioButton
                android:id="@+id/radioGroup2_radioButton5"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="极大"
                android:textSize="38sp" />
        </RadioGroup>

        <!-- 影响持续时间： -->

        <TextView
            android:id="@+id/prompt_textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:text="影响持续时间："
            android:textColor="@color/TextPromptInfo"
            android:textSize="28sp"
            android:textStyle="bold" />
        <!-- 答案按钮1 -->

        <RadioGroup
            android:id="@+id/answer_button_radioGroup3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 3个月内 -->

            <RadioButton
                android:id="@+id/radioGroup3_radioButton1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="3个月内"
                android:textSize="38sp" />
            <!-- 半年内 -->

            <RadioButton
                android:id="@+id/radioGroup3_radioButton2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="半年内"
                android:textSize="38sp" />

            <!-- 1年内 -->

            <RadioButton
                android:id="@+id/radioGroup3_radioButton3"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="1年内"
                android:textSize="38sp" />
            <!-- 1年以上 -->

            <RadioButton
                android:id="@+id/radioGroup3_radioButton4"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radiobutton_bg_of_blue"
                android:button="@null"
                android:enabled="false"
                android:gravity="center"
                android:text="1年以上"
                android:textSize="38sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>