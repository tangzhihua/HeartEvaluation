<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/answer_fragment_bg" >

    <!-- TitleBar -->

    <cn.skyduck.custom_control.answer_title.AnswerTitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- 确定 按钮 -->

    <LinearLayout
        android:id="@+id/mark_view_for_show_poplist_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/selector_system_dialog_button_bg"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/ok_button"
        android:layout_below="@id/title_bar"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 问题标题 -->

            <TextView
                android:id="@+id/question_title_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:singleLine="false"
                android:text="分值越大表示你的能力越强"
                android:textColor="#ff000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <!-- 第一个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="R型：机械操作能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <!-- 第二个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="A型：艺术创造能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <!-- 第三个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="I型：科学研究能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <!-- 第四个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="S型：解释表达能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <!-- 第五个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="E型：商业洽谈能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <!-- 第六个下拉框 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="C型：事务执行能力"
                        android:textColor="@color/TextPromptInfo"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/answer_textView6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_spinner_user_info_bg"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>