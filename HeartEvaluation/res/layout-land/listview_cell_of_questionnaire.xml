<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 分割线 -->

    <TextView
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- 量表名称 -->

        <CheckBox
            android:id="@+id/questionnaire_name_checkBox"
            style="@style/TextStyleForSettingActivityDeviceInfoFragment"
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:button="@drawable/selector_checkbox_default_bg"
            android:text="EPQ-成人"
            android:textSize="20sp" />

        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 姓名 -->

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="姓名姓名姓名姓名"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />

        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 性别 -->

        <TextView
            android:id="@+id/sex_textView"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 年龄 -->

        <TextView
            android:id="@+id/age_textView"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 默认打印 -->

        <TextView
            android:id="@+id/default_print_textView"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:text="全面"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 开始时间 -->

        <TextView
            android:id="@+id/begin_time_textView"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:text="0000-00-00 00:00"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 卡号 -->

        <TextView
            android:id="@+id/card_number_textView"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:text="000000000000000000"
            android:textColor="@color/TextColorOfTwoDimensionalTable"
            android:textSize="20sp" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

        <!-- 状态 -->

        <ImageView
            android:id="@+id/state_imageView"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:src="@drawable/pause" />
        <!-- 分割线 -->
    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/ColorOfTwoDimensionalTableVerticalLine" />

</RelativeLayout>