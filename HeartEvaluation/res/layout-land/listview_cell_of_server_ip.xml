<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_topic"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp" >

        <!-- 科室名称 -->

        <TextView
            android:id="@+id/server_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="自定义名称"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <!-- 服务器IP地址 -->

        <TextView
            android:id="@+id/server_ip_textView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="127dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="255.255.255.255"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <!-- 设为默认IP 复选框 -->

        <CheckBox
            android:id="@+id/default_checkBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/selector_checkbox_default_bg"
            android:button="@null" />

        <!-- 设置 按钮 -->

        <Button
            android:id="@+id/setting_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/default_checkBox"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="设置"
            android:textColor="@color/Black"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>