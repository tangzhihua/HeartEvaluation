<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- 上一题 按钮 -->

    <Button
        android:id="@+id/previous_button"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button_previous_bg" />

    <!-- 当前是第几题 标签 -->

    <TextView
        android:id="@+id/question_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/previous_button"
        android:gravity="center"
        android:text="第 0 题"
        android:textColor="#ff1564a6"
        android:textSize="44sp" />

    <!-- 下一题 按钮 -->

    <Button
        android:id="@+id/next_button"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/question_number_textView"
        android:background="@drawable/selector_button_next_bg" />

    <!-- 当前答题进度百分比 -->

    <ProgressBar
        android:id="@+id/question_number_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="72dip"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="34"
        android:progressDrawable="@drawable/progress_horizontal" />

    <!-- 当前答题进度百分比 标签 -->

    <TextView
        android:id="@+id/question_percent_complete_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="68dip"
        android:layout_toRightOf="@id/question_number_progressBar"
        android:text="0%"
        android:textColor="#ff000000"
        android:textSize="22sp" />

    <!-- 结束测试按钮 -->

    <Button
        android:id="@+id/end_test_button"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_button_end_test_bg" />

</RelativeLayout>