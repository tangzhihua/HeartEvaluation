<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/answer_fragment_bg" >

    <!-- TitleBar -->

    <cn.skyduck.custom_control.answer_title.AnswerTitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 问题标题 -->

        <TextView
            android:id="@+id/question_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="8．梳头、刷牙等"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/answer_button_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/option_1_radioButton"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_radiobutton_bg_of_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:text="完全可以"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/option_2_radioButton"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/selector_radiobutton_bg_of_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:text="有些困难"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/option_3_radioButton"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/selector_radiobutton_bg_of_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:text="需要帮助"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/option_4_radioButton"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/selector_radiobutton_bg_of_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:text="根本无法"
                    android:textSize="38sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/option_5_radioButton"
                    android:layout_width="798dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/selector_radiobutton_bg_of_blue"
                    android:button="@null"
                    android:gravity="center"
                    android:text="无从了解或从未做过的项目"
                    android:textSize="38sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>